// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================
// AUTH / USER
// ========================

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  password      String?

  role          UserRole   @default(VOLUNTEER)
  status        UserStatus @default(ACTIVE)
  onboarded     Boolean    @default(false)

  // Volunteer profile
  bio           String?   @db.Text
  location      String?
  postcode      String?
  lat           Float?
  lon           Float?
  skills        UserSkill[]
  interests     UserCategory[]
  availability  String?   // JSON string: ["monday", "weekend", ...]
  maxDistance   Int?      @default(25) // km

  age                 Int?

  motivationProfile   String?   @db.Text   // JSON: {waarden,begrip,sociaal,loopbaan,bescherming,verbetering}
  streakDays          Int       @default(0)
  lastActiveDate      DateTime?

  openToInvitations Boolean   @default(false)

  // Password reset
  resetToken        String?   @unique
  resetTokenExpiry  DateTime?

  // Organisation link
  organisation  Organisation? @relation("OrgAdmin")
  organisationId String?

  // Relations
  swipesGiven         Swipe[]          @relation("SwipeFrom")
  matchesAsVol        Match[]          @relation("MatchVolunteer")
  conversations       ConversationParticipant[]
  sentMessages        Message[]        @relation("MessageSender")
  adminLogs           AdminLog[]       @relation("AdminActions")
  receivedInvitations Invitation[]     @relation("ReceivedInvitations")

  // NextAuth
  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

enum UserRole {
  VOLUNTEER
  ORGANISATION
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ========================
// ORGANISATION
// ========================

model Organisation {
  id              String    @id @default(cuid())
  name            String
  slug            String    @unique
  description     String?   @db.Text
  logo            String?
  website         String?
  email           String?
  phone           String?
  address         String?
  city            String?

  status          OrgStatus @default(PENDING_APPROVAL)
  verifiedAt      DateTime?
  rejectionReason String?   @db.Text

  postcode    String?
  lat         Float?
  lon         Float?

  adminId     String   @unique
  admin       User     @relation("OrgAdmin", fields: [adminId], references: [id])

  vacancies        Vacancy[]
  categories       OrgCategory[]
  sentInvitations  Invitation[]

  avgResponseHours   Float?
  slaScore           Int     @default(100)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("organisations")
}

enum OrgStatus {
  PENDING_APPROVAL
  APPROVED
  REJECTED
  SUSPENDED
}

// ========================
// VACANCY
// ========================

model Vacancy {
  id             String        @id @default(cuid())
  title          String
  description    String        @db.Text
  imageUrl       String?
  location       String?
  city           String?
  postcode       String?
  lat            Float?
  lon            Float?
  remote         Boolean       @default(false)
  hours          Int?          // hours per week
  duration       String?       // "3 months", "ongoing", etc.
  status         VacancyStatus @default(ACTIVE)

  organisationId String
  organisation   Organisation  @relation(fields: [organisationId], references: [id], onDelete: Cascade)

  skills         VacancySkill[]
  categories     VacancyCategory[]
  swipes         Swipe[]
  matches        Match[]
  invitations    Invitation[]

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("vacancies")
}

enum VacancyStatus {
  DRAFT
  ACTIVE
  PAUSED
  CLOSED
}

// ========================
// CATEGORIES & SKILLS
// ========================

model Category {
  id            String         @id @default(cuid())
  name          String         @unique
  icon          String?
  color         String?

  userInterests UserCategory[]
  orgCategories OrgCategory[]
  vacancyCategories VacancyCategory[]

  @@map("categories")
}

model Skill {
  id           String        @id @default(cuid())
  name         String        @unique

  userSkills   UserSkill[]
  vacancySkills VacancySkill[]

  @@map("skills")
}

model UserSkill {
  userId  String
  skillId String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill   Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([userId, skillId])
  @@map("user_skills")
}

model UserCategory {
  userId     String
  categoryId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([userId, categoryId])
  @@map("user_categories")
}

model OrgCategory {
  organisationId String
  categoryId     String
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  category       Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([organisationId, categoryId])
  @@map("org_categories")
}

model VacancySkill {
  vacancyId String
  skillId   String
  vacancy   Vacancy @relation(fields: [vacancyId], references: [id], onDelete: Cascade)
  skill     Skill   @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([vacancyId, skillId])
  @@map("vacancy_skills")
}

model VacancyCategory {
  vacancyId  String
  categoryId String
  vacancy    Vacancy  @relation(fields: [vacancyId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([vacancyId, categoryId])
  @@map("vacancy_categories")
}

// ========================
// SWIPE & MATCH
// ========================

model Swipe {
  id        String    @id @default(cuid())
  direction SwipeDir

  fromId    String
  from      User      @relation("SwipeFrom", fields: [fromId], references: [id], onDelete: Cascade)

  vacancyId String
  vacancy   Vacancy   @relation(fields: [vacancyId], references: [id], onDelete: Cascade)

  matchReason String?   // "Goede zaak"|"Past bij mijn skills"|"Flexibele tijden"|"Dichtbij mij"

  createdAt DateTime  @default(now())

  @@unique([fromId, vacancyId])
  @@map("swipes")
}

enum SwipeDir {
  LIKE
  DISLIKE
  SUPER_LIKE
}

model Match {
  id             String      @id @default(cuid())
  status         MatchStatus @default(PENDING)

  volunteerId    String
  volunteer      User        @relation("MatchVolunteer", fields: [volunteerId], references: [id], onDelete: Cascade)

  vacancyId      String
  vacancy        Vacancy     @relation(fields: [vacancyId], references: [id], onDelete: Cascade)

  conversation   Conversation?

  startedAt        DateTime?   // set on ACCEPTED
  checkIn1SentAt   DateTime?   // week 1 (7d)
  checkIn4SentAt   DateTime?   // week 4 (28d)
  checkIn12SentAt  DateTime?   // week 12 (84d)

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@unique([volunteerId, vacancyId])
  @@map("matches")
}

enum MatchStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
}

// ========================
// CHAT / MESSAGING
// ========================

model Conversation {
  id           String                    @id @default(cuid())
  matchId      String?                   @unique
  match        Match?                    @relation(fields: [matchId], references: [id])

  participants ConversationParticipant[]
  messages     Message[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("conversations")
}

model ConversationParticipant {
  conversationId String
  userId         String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastReadAt     DateTime?

  @@id([conversationId, userId])
  @@map("conversation_participants")
}

model Message {
  id             String       @id @default(cuid())
  content        String       @db.Text
  type           MessageType  @default(TEXT)

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId       String
  sender         User         @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("messages")
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  SYSTEM
}

// ========================
// INVITATIONS
// ========================

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model Invitation {
  id             String           @id @default(cuid())
  message        String?          @db.Text
  status         InvitationStatus @default(PENDING)

  organisationId String
  organisation   Organisation     @relation(fields: [organisationId], references: [id], onDelete: Cascade)

  vacancyId      String
  vacancy        Vacancy          @relation(fields: [vacancyId], references: [id], onDelete: Cascade)

  volunteerId    String
  volunteer      User             @relation("ReceivedInvitations", fields: [volunteerId], references: [id], onDelete: Cascade)

  conversationId String?          // set on ACCEPTED

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@unique([organisationId, vacancyId, volunteerId])
  @@map("invitations")
}

// ========================
// ADMIN
// ========================

model AdminLog {
  id         String      @id @default(cuid())
  adminId    String
  admin      User        @relation("AdminActions", fields: [adminId], references: [id])
  action     AdminAction
  entityType String      // "Organisation" | "User" | "Vacancy"
  entityId   String
  reason     String?     @db.Text
  metadata   Json?
  createdAt  DateTime    @default(now())

  @@map("admin_logs")
}

enum AdminAction {
  APPROVE_ORG
  REJECT_ORG
  SUSPEND_ORG
  UNSUSPEND_ORG
  SUSPEND_USER
  BAN_USER
  REINSTATE_USER
}
